{
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "editor.formatOnSave": true,
  "explorer.sortOrder": "type",
  "css.validate": false,
  "scss.validate": false,
  // file nesting
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": ".nvmrc, .npm*, bun.lockb, pnpm*",
    "*.js": "",
    "*.ts": ""
  },
  // tailwind support for cva and classNames
  "tailwindCSS.classAttributes": ["className", "\\w+ClassName"],
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  // prettier-ignore
  "cSpell.words": [
    "envalid","hookform","inter","rehype","tailwindcss","webp","zod","shiki",
    "fira","qrcode","pluggables",
  ]
}
